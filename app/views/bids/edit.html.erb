<!-- Validation failure messages -->

<% if @bid.errors.any? %>
  <% @bid.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Bid #<%= @bid.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_bid/<%= @bid.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for item_id -->
          <div class="form-group">
            <label for="item_id" class="col-sm-2 control-label">
              Item
            </label>
            <div class="col-sm-10">
              <input type="text" id="item_id" name="item_id" placeholder="Item" class="form-control" value="<%= @bid.item_id %>">
            </div>
          </div>

          <!-- Label and input for user_name -->
          <div class="form-group">
            <label for="user_name" class="col-sm-2 control-label">
              User name
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_name" name="user_name" placeholder="User name" class="form-control" value="<%= @bid.user_name %>">
            </div>
          </div>

          <!-- Label and input for bid_amount -->
          <div class="form-group">
            <label for="bid_amount" class="col-sm-2 control-label">
              Bid amount
            </label>
            <div class="col-sm-10">
              <input type="text" id="bid_amount" name="bid_amount" placeholder="Bid amount" class="form-control" value="<%= @bid.bid_amount %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Bid
              </button>
              or
              <a href="/bids/<%= @bid.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
