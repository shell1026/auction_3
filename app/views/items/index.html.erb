
<!-- Responsive, Isotope-based layout example -->


<div class="container">
  <div class="row header">
    <div class="col-md-12" id="bar">
      <h3>Welcome to our Online Auction!</h3>
      <p class="text-danger">Auction starts: September 16, 2015 8:00 AM;
        Auction ends: September 18, 8:00 PM
      </p>
<!--       <form action="cheatsheet.html">
        <input type="text" id="quicksearch" placeholder="Search Items" class="form-control">
      </form> -->
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <hr>
      <h4>All Items</h4>
    </div>
    <div class="col-md-12 featured">
      <div class="col-md-2">
      </div>
      <div class="col-md-6">
      </div>
      <div class="col-md-1">
        <p><span style="text-decoration: underline;">Winning</p></span>
      </div>
      <div class="col-md-1">
        <p><span style="text-decoration: underline;">Category</p></span>
      </div>
      <div class="col-md-1">
        <p> <span style="text-decoration: underline;">#Bids</p>
      </div>
      <div class="col-md-1">
        <p> <span style="text-decoration: underline;">High Bid</p>
      </div>
    </div>
  </div>
  <% @items.each do |item| %>
  <div class="row">
    <div class="col-md-12">
       <div class="col-md-2">
         <%= image_tag item.photo, width: 100, height: 100, class: "item" %>
       </div>
       <div class="col-md-6">
         <a href="/items/<%= item.id %>"><%= item.item_name %></a>
         <p><%= item.description %></p>
       </div>
       <div class="col-md-1">
       </div>
       <div class="col-md-1"><a href="/cat/#<%= item.category %>"><%= item.category %></a>
       </div>
       <div class="col-md-1">
        <%= item.bids.count %>
       </div>
       <div class="col-md-1">
        $<%= item.bids.maximum("bid_amount") %>
       </div>
    </div>
  </div>
  <% end %>

<div class="col-md-12">
    <h3>Sponsors:</h3>
    <div class="col-md-2"><%= image_tag("sponsor/porter.jpg", size:"150x150") %></div>
    <div class="col-md-2"><%= image_tag("sponsor/bmc.png", size:"150x150") %></div>
    <div class="col-md-2"><%= image_tag("sponsor/theark.jpg", size:"150x150") %></div>
    <div class="col-md-2"><%= image_tag("sponsor/swartzretson.jpg", size:"150x150") %></div>
    <div class="col-md-2"><%= image_tag("150.gif", size:"150x150") %></div>
    <div class="col-md-2"><%= image_tag("150.gif", size:"150x150") %></div>
    <hr>
  <hr>
</div>

