<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Item #<%= @item.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Item name</dt>
              <dd><%= @item.item_name %></dd>

              <dt>Description</dt>
              <dd><%= @item.description %></dd>

              <dt>Value</dt>
              <dd><%= @item.value %></dd>

              <dt>Starting bid</dt>
              <dd><%= @item.starting_bid %></dd>

              <dt>Increment</dt>
              <dd><%= @item.increment %></dd>

              <dt>Donor</dt>
              <dd><%= @item.donor %></dd>

              <dt>Photo</dt>
              <dd><%= @item.photo %></dd>

              <dt>Category</dt>
              <dd><%= @item.category %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/items" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/items/<%= @item.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_item/<%= @item.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
