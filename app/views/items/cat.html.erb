  <% @unique_cat.each do |category| %>
  <% curr_cat = Item.where(category: category) %>
  <hr>
  <a id="<%= category %>">
  <div class="row">
    <hr>
    <div class="col-md-12 featured">
      <div class="col-md-2">
      </div>
