         <a href="/items/<%= stuff.id %>"><%= stuff.item_name %></a>
       </div>
       <div class="col-md-1">

      </div>
       <div class="col-md-1">
        <%= stuff.category %>
      </div>
      <div class="col-md-1">
        <%= stuff.bids.count %>
      </div>
      <div class="col-md-1">
        $<%= stuff.bids.maximum("bid_amount") %>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>

